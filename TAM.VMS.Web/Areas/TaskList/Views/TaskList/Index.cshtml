@{
    string userRole = ViewBag.UserRole as string;
}

@section scripts {
    @await Html.PartialAsync("~/Areas/TaskList/Views/TaskList/Script/_TaskList.cshtml")
}

@section modals {
    @await Html.PartialAsync("~/Areas/TaskList/Views/TaskList/Component/_TaskListForm.cshtml")
}

<div class="portlet light margin-bottom-0">
    <div class="div-title-menu">
        <div class="page-head">
            <div class="text-title-menu">
                My Task list - @(string.IsNullOrEmpty(userRole) ? "Default Role" : userRole)
            </div>
        </div>
    </div>

    <div class="tab-content ">
        <div class="tab-pane active" id="UserAccess">
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-12" id="containerGrid">
                        @await Html.PartialAsync("~/Areas/TaskList/Views/TaskList/Grid/_TaskListGrid.cshtml")
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 text-right" style="margin-top: 20px;">
                        <a href="#" class="btn green btn-success btn-sm" style="border-radius: 8px;font-size:12px; width: 100px; background-color: #03d774" id="btnRequest">
                            Approve
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>