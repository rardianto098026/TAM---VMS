@section styles {
    <link href="~/Content/theme/Metronic/global/plugins/jstree/dist/themes/default/style.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme/Metronic/global/plugins/fontawesome-iconpicker/css/fontawesome-iconpicker.min.css" rel="stylesheet" type="text/css" />
}
@section scripts {
    @await Html.PartialAsync("~/Areas/Core/Views/Menu/Script/_Menu.cshtml")
    <script type="text/javascript" src="~/Content/theme/Metronic/global/plugins/jstree/dist/jstree.min.js"></script>
    <script type="text/javascript" src="~/Content/theme/Metronic/global/plugins/fontawesome-iconpicker/js/fontawesome-iconpicker.min.js"></script>
}

@section modals {
    @await Html.PartialAsync("~/Areas/Core/Views/Menu/Component/_MenuForm.cshtml")
}
<div class="portlet light margin-bottom-0">
    <div class="row">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>Menu</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div id="customTab">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#Permission" data-toggle="tab" aria-expanded="false">Menu</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="tab-content ">
        <div class="tab-pane active" id="Role">
            <div class="row">
                <div class="col-xs-6">
                    <div class="page-head">
                        <div class="page-title">
                            <h1>
                                <span>Manage Menus</span>
                            </h1>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 text-right">
                    <div class="page-toolbar pull-right">
                        <a class="btn blue-madison btn-outline btn-circle pull-right" href="@Url.Content("~/Core/Menu/RefreshMenu")">Refresh Menu</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-12">
                    @Html.DropDownList("MenuGroup", new SelectList(ViewBag.MenuGroups, "ID", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="tree"></div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            MenuManagement = new MenuManagement();
            MenuManagement.InitManagement();
        });
    </script>
