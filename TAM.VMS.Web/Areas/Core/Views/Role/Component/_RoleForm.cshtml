@model TAM.VMS.Domain.Role
@{
    var permissions = (IEnumerable<TAM.VMS.Domain.Permission>)ViewBag.Permissions;
}
<div id="RoleModal" class="modal fade bs-modal-lg" data-backdrop="static" abindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Manage Role</h4>
            </div>
            <div class="modal-body">
                <form id="RoleForm">
                    @Html.HiddenFor(x => x.ID)
                    <div class="tab-container tabbable-line">
                        <ul class="nav nav-tabs">
                            <li class="nav-item active">
                                <a href="#tab_role" data-toggle="tab">Role</a>
                            </li>
                            <li>
                                <a href="#tab_permission" data-toggle="tab">Permission</a>
                            </li>
                        </ul>
                        <div class="tab-content" style="padding-top: 20px;">
                            <div class="tab-pane active" id="tab_role">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Name</label>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Description</label>
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab_permission">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="tree"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                    <button type="button" class="btn green" id="btnSaveRole">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>