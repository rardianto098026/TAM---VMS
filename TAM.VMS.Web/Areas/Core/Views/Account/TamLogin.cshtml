@model TAM.VMS.Domain.LoginViewModel
@{
    Layout = "_LoginLayout";

    var passportAppId = ViewBag.passportAppId; //TAM.VMS.Infrastructure.Cache.ApplicationCacheManager.GetConfig<string>("PassportAppId");
    var passportUrl = ViewBag.passportUrl; // TAM.VMS.Infrastructure.Cache.ApplicationCacheManager.GetConfig<string>("PassportJsUrl");
    var passportJs = passportUrl + "/tam-sso.js";
}
@section scripts {
    @*<script type="text/javascript" src="~/js/tam-sso.js"></script>*@
    <script type="text/javascript" src="@passportJs"></script>
}
<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root kt-page">
    <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v3 kt-login--signin" id="kt_login">
        <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" style="background-image: url(@Url.Content("~/img/bg-3.jpg"))">
            <div class="kt-grid__item kt-grid__item--fluid kt-login__wrapper">
                <div class="kt-login__container">
                    <div class="kt-login__logo">
                        <a href="#">
                            <!-- logo placement -->
                        </a>
                    </div>
                    <form id="loginform" method="post" asp-controller="Account" asp-action="Login"
                          asp-route-returnurl="/" class="kt-form">
                        <div class="kt-login__signin">
                            <div class="kt-login__head">
                                <h3 class="kt-login__title">Sign In To VMS Monitoring</h3>
                            </div>
                            <div class="form-actions text-center" style="border: 0;">
                                <tam-sso server="@passportUrl" app="@passportAppId" auto-submit="loginform"></tam-sso>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end:: Page -->
